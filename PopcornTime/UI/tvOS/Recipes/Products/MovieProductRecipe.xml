<head>
<style>
    .badge {
        tv-tint-color: rgb(255,255,255);
    }
    .hover {
        tv-text-highlight-style: marquee-and-show-on-highlight;
    }
    .placeholder {
        tv-placeholder:movie;
    }
    .imgGradient {
        tv-img-treatment: blurOverlay;
        tv-img-treatment:uber;
        background-color: #1E1F29;
        tv-tint-color: black;
    }
    .indicator {
        tv-position: top;
        tv-align: right;
        margin: -45 0 75 75;
    }
</style>
</head>
<productTemplate>
    <background>
        <img class="imgGradient" src="{{FANART_IMAGE}}" style="tv-tint-color: linear-gradient(top, 0.33, transparent, 0.66, rgba(0,0,0,0.7), rgba(000,0,0,1.0));" />
    </background>
    
    <banner>
        <infoList>
            <info>
                <header>
                    <title>Genre</title>
                </header>
                {{GENRES}}
            </info>
            <info>
                <header>
                    <title>Directors</title>
                </header>
                {{DIRECTORS}}
            </info>
            <info>
                <header>
                    <title>Staring</title>
                </header>
                {{ACTORS}}
            </info>
        </infoList>
        <stack>

            <title>{{TITLE}}</title>
            <row>
                <text>{{RUNTIME}}</text>
                <text>{{YEAR}}</text> 
                <badge src="resource://mpaa-{{RATING}}" class="badge" />
                <badge src="resource://hd" class="badge" />
                <badge src="resource://cc" class="badge" />
                <ratingBadge style="tv-rating-style: star-hollow-l;" value="0.{{STAR_RATING}}"></ratingBadge>
            </row>
            <description allowsZooming="true" moreLabel="more" actionID="showDescription»{{TITLE}}»{{DESCRIPTION}}">{{DESCRIPTION}}</description>
            <row>
                <buttonLockup actionID="playTrailer»{{YOUTUBE_PREVIEW_CODE}}">
                    <badge src="resource://button-preview" />
                    <title>Trailer</title>
                </buttonLockup>
                
                <buttonLockup actionID="chooseQuality»{{TORRENTS}}»{{MOVIE}}">
                    <badge src="resource://button-play" />
                    <title>Play</title>
                </buttonLockup>
                
                {{WATCH_LIST_BUTTON}}
                
                {{WATCHED_LIST_BUTTON}}
            </row>
        </stack>
    </banner>
    
    <!-- Suggestions -->
    
    {{SUGGESTIONS}}
    
    <!-- Cast -->
    
    {{CAST}}
    
    <!-- Footer -->
    
    <productInfo>
        <infoTable>
            <header>
                <title>Information</title>
            </header>
            <info>
                <header>
                    <title>Genre</title>
                </header>
                <text>{{GENRES}}</text>
            </info>
            <info>
                <header>
                    <title>Released</title>
                </header>
                <text>{{YEAR}}</text>
            </info>
            <info>
                <header>
                    <title>Run Time</title>
                </header>
                <text>{{RUNTIME}}</text>
            </info>
            <info>
                <header>
                    <title>Rating</title>
                </header>
                <text>{{RATING_FOOTER}}</text>
            </info>
        </infoTable>
        <infoTable style="tv-line-spacing:10;">
            <header>
                <title>Accessibility</title>
            </header>
            <info>
                <header>
                    <textBadge>SDH</textBadge>
                </header>
                <text>Subtitles for the deaf and Hard of Hearing (SDH) refer to subtitles in the original lanuage with the addition of relevant non-dialog information.</text>
            </info>
        </infoTable>
    </productInfo>

</productTemplate>
