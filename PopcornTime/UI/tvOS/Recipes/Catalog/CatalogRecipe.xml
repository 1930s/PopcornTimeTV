<head>
    <style>
        .hover {
            tv-text-highlight-style: marquee-and-show-on-highlight;
        }
        .img {
            tv-placeholder: movie;
        }
        @media tv-template and (tv-theme:light) {
        tv-highlight-color:rgb(255, 255, 255);}
        }
        @media tv-template and (tv-theme:dark) {
        tv-highlight-color:rgb(0,0,0);}
        }
    </style>
</head>
<stackTemplate>
    <banner>
        <title>{{TITLE}}</title>
    </banner>
    <collectionList>
        <grid>
            <section>
                {{POSTERS}}
            </section>
        </grid>
    </collectionList>
</stackTemplate>
